package test;

public class feb {

	public static void main(String[] args) {
		int n=4;
		System.out.println(isPri(n,2));

	}
//	public static boolean isPrime(int n) {
//		return isPri(n,2);
//	}
	
	public static boolean isPri(int n,int i) {
		if(i*i>n) {
			return true;
		}
		else if(n%i==0) {
			return false;
		}else {
			return isPri(n,i+1);
		}
	}

}
